# Agent Composer Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# LLM Provider API Keys
# ===========================================
# At least one provider should be configured

# OpenAI API Key (required for GPT models)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key (required for Claude models)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Ollama Base URL (for local models)
# Default: http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434

# ===========================================
# Default Models (optional)
# ===========================================

# Default OpenAI model (e.g., gpt-4o, gpt-4o-mini, or your fine-tuned model ID)
DEFAULT_OPENAI_MODEL=gpt-4o

# Default Anthropic model
DEFAULT_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Default Ollama model
DEFAULT_OLLAMA_MODEL=llama3.2

# ===========================================
# Application Settings
# ===========================================

# Enable debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Backend server port
PORT=8000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Database URL
DATABASE_URL=sqlite+aiosqlite:///./agent_composer.db
